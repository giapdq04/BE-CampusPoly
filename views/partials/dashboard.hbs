                        <div class="card flex-grow-1 mx-2">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title">Online</h5>
                                    <i class="bi bi-circle-fill text-success"></i>
                                </div>
                                <span class="user-online" id="user-online">
                                    0
                                </span>
                            </div>
                        </div>
                        <div class="card flex-grow-1 mx-2">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title">Tổng số bài viết</h5>
                                </div>
                                <span class="total-post" id="total-post">
                                    0
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3 h-100">
                <div class="col-md-6">
                    <div class="col-md-12 mb-3 d-flex align-item-center justify-content-between">
                        <h6>THỐNG KÊ BÀI VIẾT</h6>
                        <select id="statistic-type" style="background-color: #e4ebf6;"
                            class="form-select form-select-sm border-0 rounded p-1">
                            <option value="month" selected>Theo tháng</option>
                            <option value="day">Theo ngày</option>
                            <option value="year">Theo năm</option>
                        </select>
                    </div>
                    <div class="col-md-12 d-flex justify-content-center">
                        <div class="wrapper-chart w-100">
                            <canvas id="number-of-posts"></canvas>
                        </div>
                    </div>
                </div>
            </div>

